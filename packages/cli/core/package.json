{
  "name": "@modern-js/core",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.7.1",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./bin": {
      "jsnext:source": "./src/cli.ts",
      "default": "./bin/modern-js.js"
    }
  },
  "typesVersions": {
    "*": {
      "config": [
        "./dist/types/config/index.d.ts"
      ]
    }
  },
  "bin": "./bin/modern-js.js",
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm && pnpm build -- --platform",
    "new": "modern new",
    "build": "modern build",
    "dev": "modern build --watch",
    "test": "jest"
  },
  "dependencies": {
    "@babel/code-frame": "^7.14.5",
    "@babel/runtime": "^7",
    "@modern-js/load-config": "workspace:^1.3.0",
    "@modern-js/plugin": "workspace:^1.3.2",
    "@modern-js/utils": "workspace:^1.4.1",
    "address": "^1.1.2",
    "ajv": "^8.6.2",
    "ajv-keywords": "^5.0.0",
    "better-ajv-errors": "^0.7.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "@jest/types": "^27.0.6",
    "@modern-js/types": "workspace:^1.4.0",
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*",
    "@types/babel__code-frame": "^7.0.3",
    "@types/babel__core": "^7.1.16",
    "@types/jest": "^26",
    "@types/less": "^3.0.3",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "autoprefixer": "^10.3.1",
    "btsm": "2.2.2",
    "jest": "^27",
    "sass": "^1.45.0",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4",
    "webpack": "^5.71.0",
    "webpack-chain": "^6.5.1"
  },
  "sideEffects": false,
  "modernConfig": {
    "output": {
      "packageMode": "node-js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  }
}
