{
  "name": "@modern-js/core",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.4.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "jsnext:source": "./src/index.ts",
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./bin": {
      "jsnext:source": "./src/cli.ts",
      "default": "./bin/modern-js.js"
    }
  },
  "typesVersions": {
    "*": {
      "config": [
        "./dist/types/config/index.d.ts"
      ]
    }
  },
  "bin": "./bin/modern-js.js",
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build -- --platform",
    "new": "modern new",
    "build": "modern build",
    "dev": "modern build --watch",
    "test": "jest"
  },
  "dependencies": {
    "@babel/code-frame": "^7.14.5",
    "@babel/runtime": "^7",
    "@modern-js/load-config": "workspace:^1.2.1",
    "@modern-js/plugin": "workspace:^1.2.1",
    "@modern-js/utils": "workspace:^1.3.0",
    "address": "^1.1.2",
    "ajv": "^8.6.2",
    "ajv-keywords": "^5.0.0",
    "better-ajv-errors": "^0.7.0",
    "chokidar": "^3.5.2",
    "commander": "^8.1.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.mergewith": "^4.6.2",
    "minimist": "^1.2.5",
    "signale": "^1.4.0",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "btsm": "2.2.2",
    "@types/babel__code-frame": "^7.0.3",
    "@modern-js/types": "workspace:^1.3.0",
    "@types/jest": "^26",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/signale": "^1.4.2",
    "typescript": "^4",
    "jest": "^27",
    "@scripts/build": "workspace:*",
    "@scripts/jest-config": "workspace:*"
  },
  "sideEffects": false,
  "modernConfig": {
    "output": {
      "packageMode": "node-js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/types/index.d.ts"
  }
}
