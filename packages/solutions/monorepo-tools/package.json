{
  "name": "@modern-js/monorepo-tools",
  "version": "1.0.0-rc.8",
  "jsnext:source": "./src/index.ts",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./cli": "./dist/js/node/index.js"
  },
  "bin": {
    "modern": "./bin/modern.js"
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build -- --platform",
    "new": "modern new",
    "build": "modern build",
    "test": "modern test --passWithNoTests"
  },
  "dependencies": {
    "@babel/runtime": "^7",
    "@modern-js/core": "workspace:^1.0.0-rc.8",
    "@modern-js/i18n-cli-language-detector": "workspace:^1.0.0-rc.8",
    "@modern-js/new-action": "workspace:^1.0.0-rc.8",
    "@modern-js/plugin-changeset": "workspace:^1.0.0-rc.8",
    "@modern-js/plugin-i18n": "workspace:^1.0.0-rc.8",
    "commander": "^8.1.0",
    "@modern-js/utils": "workspace:^1.0.0-rc.8",
    "@rushstack/node-core-library": "^3.39.1",
    "@rushstack/package-deps-hash": "^3.0.54",
    "anymatch": "^3.1.2",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "cross-spawn": "^7.0.3",
    "globby": "^11.0.0",
    "js-yaml": "^4.1.0",
    "md5": "^2.3.0",
    "p-map": "^4.0.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/js-yaml": "^4.0.2",
    "@types/md5": "^2.3.1",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/signale": "^1.4.2",
    "execa": "^5.1.1",
    "typescript": "^4",
    "@modern-js/plugin-testing": "^1.0.0-rc.8",
    "@modern-js/module-tools": "^1.0.0-rc.8"
  },
  "sideEffects": false,
  "modernConfig": {
    "output": {
      "packageMode": "node-js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
