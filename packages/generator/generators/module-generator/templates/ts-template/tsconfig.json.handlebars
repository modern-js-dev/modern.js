{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@style/*": ["./styles/*"]
    }
  },
  {{#if isComponent}}
  "include": ["src", "stories"]
  {{else}}
  "include": ["src"]
  {{/if}}
}
